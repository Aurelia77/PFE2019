{% extends "/layout.html.twig" %}

{% block title %}
  {{ parent() }} | Modification du mail
{% endblock %}

{% block content %}
  {#-------------------------------------------------------------------------------------------------------------------------------------#}
  {# Header : titre + fil d'ariane #}
  {#-------------------------------------------------------------------------------------------------------------------------------------#}
  <section class="row page_cover">
    <div class="container">
      <div class="row m0">
        <h1>Mon adresse mail Entre Dièses et Bémols</h1>
        <ol class="breadcrumb">
          <li><a href="{{ path('home') }}">Accueil</a></li>
          <li><a href="{{ path('user') }}">Mon compte</a></li>
          <li class="active">Adresse mail</li>
        </ol>
      </div>
    </div>
  </section>

  {#Ruban#}
  {% include "Includes/ribbon.html.twig" %}

<div class="container">
  <div class="row">
  {% include "Includes/usermenu.html.twig" %}

    <h2 class="mt-5 mb-5 text-center">Modifier mon adresse mail Entre Dièses et Bémols</h2>

    <p class="alert-info w-50 text-center my-1">Mon adresse mail actuelle : {{  app.user.email }}</p>
    {{ form_start(changeEmailForm, {'attr': {'class': 'container-fluid login_form auth_form'}}) }}
    <div class="form-inner row">

      <div class="form-body row m0 mb-5">

        <p>{{ form_errors(changeEmailForm.emailTemp) }}</p>
        {{ form_widget(changeEmailForm.emailTemp, {'attr': {'class': 'form-control', 'placeholder':'Nouvel email'}}) }}

        <input type="submit" value="Enregistrer" class="btn btn-default form-control">
      </div>
    </div>
    {{ form_end(changeEmailForm) }}

  </div>
</div>

{% endblock content %}
