{% extends "/layout.html.twig" %}

{% block title %}
    {{ parent() }} | Modification du mot de passe
{% endblock %}

{% block content %}
    {#-------------------------------------------------------------------------------------------------------------------------------------#}
    {# Header : titre + fil d'ariane #}
    {#-------------------------------------------------------------------------------------------------------------------------------------#}
    <section class="row page_cover">
        <div class="container">
            <div class="row m0">
                <h1>Mon mot de passe</h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li><a href="{{ path('user') }}">Mon compte</a></li>
                    <li class="active">Mot de passe</li>
                </ol>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="row">

            {% include "Includes/usermenu.html.twig" %}

            <h2 class="mt-5 mb-5 text-center">Modifier mon mot de passe Entre Dièses et Bémols</h2>

            {{ form_start(changePasswordForm, {'attr': {'class': 'container-fluid login_form auth_form'}}) }}

            <div class="form-inner row">

                <div class="form-body row m0 mb-5">

                    <p>{{ form_errors(changePasswordForm.oldPassword) }}</p>
                    {{ form_widget(changePasswordForm.oldPassword, {'attr': {'class': 'form-control', 'placeholder': 'Ancien mot de passe'}}) }}

                    <p>{{ form_errors(changePasswordForm.plainPassword.first) }}</p>
                    {{ form_widget(changePasswordForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}

                    <p>{{ form_errors(changePasswordForm.plainPassword.second) }}</p>
                    {{ form_widget(changePasswordForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Répétez mot de passe'}}) }}

                    <input type="submit" value="Enregistrer" class="btn btn-default form-control">

                </div>
            </div>
            {{ form_end(changePasswordForm) }}
        </div>
    </div>


{% endblock content %}
