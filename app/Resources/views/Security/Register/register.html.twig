{% extends "/layout.html.twig" %}

{% block title %}
    {{ parent() }} | Inscription
{% endblock %}

{% block content %}
    {#-------------------------------------------------------------------------------------------------------------------------------------#}
    {# Header : titre + fil d'ariane #}
    {#-------------------------------------------------------------------------------------------------------------------------------------#}
    <section class="row page_cover">
        <div class="container">
            <div class="row m0">
                <h1>Inscription Entre Dièses et Bémols</h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li class="active">Inscription</li>
                </ol>
            </div>
        </div>
    </section>

    {#Ruban#}
    {% include "Includes/ribbon.html.twig" %}

    <div class="container mb_400">
        <div class="row">

            <h2 class="mb-5 text-center">Inscription Entre Dièses et Bémols</h2>

            {# form_start => balise <form> #}
            {{ form_start(registerForm, {'attr': {'class': 'container-fluid login_form auth_form'}}) }}
            <div class="form-inner row">
                <div class="login_options row m0">
                    <div class="options_header row m0">
                        <a href="{{ path('home') }}" class="mb-5"><img src="{{ asset('images/logoDieseBemol.png') }}" alt="Logo du site Entre Dièses et Bémols"></a>
                        <div class="text-center">
                            <a href="{{ path('login') }}">
                                <button class="btn btn-primary mb-5 h_50">Se connecter</button>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="form-body row m0 mb-5">

                    {#- form_widget() : Affiche le champ en argument uniquement.#}
                    {#- form_errors() : Affiche les erreurs du champ en argument.#}
                    {#- form_label() : Affiche le label du champ en argument. (Le second argument est la valeur du label ???!!!).#}
                    {#- form_row() Affiche le label, les erreurs et le champ en argument.#}

                    {# Va chercher les erreurs dans User #}
                    <p>{{ form_errors(registerForm.email) }}</p>
                    {{ form_widget(registerForm.email, {'attr': {'class': 'form-control', 'placeholder':'Email'}}) }}

                    <p>{{ form_errors(registerForm.pseudo) }}</p>
                    {{ form_widget(registerForm.pseudo, {'attr': {'class': 'form-control', 'placeholder':'Pseudo (2 à 10 caractères)'}}) }}

                    {#<p>{{ form_errors(registerForm.photo) }}</p>#}
                    {#{{ form_row(registerForm.photo, {'attr': {'class': 'form-control'}}) }}#}

                    <p>{{ form_errors(registerForm.firstName) }}</p>
                    {{ form_widget(registerForm.firstName, {'attr': {'class': 'form-control', 'placeholder':'Prénom'}}) }}

                    <p>{{ form_errors(registerForm.lastName) }}</p>
                    {{ form_widget(registerForm.lastName, {'attr': {'class': 'form-control', 'placeholder':'Nom'}}) }}

                    {#<p>{{ form_errors(registerForm.sexe) }}</p>#}
                    {#{{ form_widget(registerForm.sexe, {'attr': {'class': 'form-control', 'placeholder':'Sexe'}}) }}#}

                    <p>{{ form_errors(registerForm.plainPassword.first) }}</p>
                    {{ form_widget(registerForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder':'Mot de passe (6 caractères min)'}}) }}

                    <p>{{ form_errors(registerForm.plainPassword.second) }}</p>
                    {{ form_widget(registerForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder':'Répétez le mot de passe'}}) }}

                    <p>{{ form_errors(registerForm.rgpd) }}</p>
                    {{ form_widget(registerForm.rgpd, {'attr': {'class': 'form-control my-5'}}) }}

                    {#{{ form_row(registerForm._token) }} !!!???  = CSRF : Symfony utilise entre autre le paramètre secret: ThisTokenIsNotSoSecretChangeIt de
                  votre fichier parameters.yml pour générer le CSRF.#}
                    <input type="submit" value="S'inscrire" class="btn btn-default form-control">
                    {#<button type="submit" class="btn btn-info">S'enregistrer !</button>#}
                </div>
            </div>
            {# form_end => balise </form> #}
            {{ form_end(registerForm) }}

        </div>
    </div>


{% endblock content %}


