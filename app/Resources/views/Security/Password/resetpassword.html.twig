{% extends "/layout.html.twig" %}

{% block title %}
    {{ parent() }} | Redéfinir le mot de passe
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">

            <h1 class="mt-5 mb-5 text-center">Changement de mot de passe - Entre Dièses et Bémols</h1>

            {#{{ form(passwordForm) }}#}

    {{ form_start(passwordForm, {'attr': {'class': 'container-fluid login_form auth_form'}}) }}

    <div class="form-inner row">

        <div class="form-body row m0 mb-5">

            <p>{{ form_errors(passwordForm.plainPassword.first) }}</p>
            {{ form_widget(passwordForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}

            <p>{{ form_errors(passwordForm.plainPassword.second) }}</p>
            {{ form_widget(passwordForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Répétez mot de passe'}}) }}

            <input type="submit" value="Enregistrer" class="btn btn-default form-control">

            {{ form_end(passwordForm) }}


        </div>
    </div>

{% endblock content %}