<div class="inner row m0 audio-player">
    {#<a href="{{ asset('theme/single-video.html') }}">#}
    {#<a href="{{ asset('track/seetrack.html/', {'id' : track.id}) }}">  Marche PAS !!! Pk on utilise path et non asset ci-dessous ??? #}
    <a href="{{ path('seetrack', {'id' : track.id}) }}" title="Voir le track dans un onglet">
        <div class="row screencast m0">
            <img src="{{ asset(img_track_directory) }}/{{ track.image }}.jpg" alt="Image de la musique"
                 class="cast img-responsive img_track">
            <div class="play_btn"></div>
            <div class="media-length total-time">00:00</div>
        </div>
        <h3 class="row m0">
            {{ track.title }}
            {% if track.num > 0 %}
                (+{{ track.num }})
            {% endif %}
        </h3>
    </a>

    <div {% if track.num == 0 %} class="row m0 post_data track_num0"
    {% else %} class="row m0 post_data" {% endif %}>

        {#On va chercher dans la table Track le user (qui est un objet) ds lequel on va chercher le pseudo#}
        {% if track.user.pseudo is defined %}
            <h4>{{ track.user.pseudo }}</h4>
        {% endif %}

        <div class="date">Publié le : {{ track.creationDate|date("d/m/Y") }}</div>
        {#<div class="fright views"><a href="#"><img#}
        {#src="{{ asset('theme/images/icons/views.png') }}"#}
        {#alt="">3,45,346</a></div>#}
        <audio controls>
            Votre navigateur ne supporte pas l'élément <code>audio</code>
            <source src="{{ asset(track_directory) }} /{{ track.track }}.mp3"/>
            {#String $tpsTrack = {{ track.track }}#}
        </audio>

        <a href="{{ path('download', {'id' : track.id}) }}">
            <img src="{{ asset('images/download.png') }}" height="50px"
                 alt="Lien télécharger track de musique">
        </a>
        {% if track.num > 0 %}
            <a href="{{ path('seetrack', {'id' : track.id - 1 }) }}"
               title="Voir le track de musique sans le dernier son">
                <button class="btn btn-primary mb-5">Voir le track de musique sans le dernier son</button>
            </a>
            </a>

        {% endif %}

    </div>

</div>
